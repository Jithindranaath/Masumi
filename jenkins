pipeline {
    agent any // This is fine, it will run on your main Windows machine

    stages {
        stage('Checkout') {
            steps {
                echo "Pulling source code from repository..."
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "Building the application..."
                // Use 'bat' instead of 'sh'
                bat 'echo "Build step executed"'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                // Use 'bat' instead of 'sh'
                bat 'echo "Test step executed"'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying application..."
                // Use 'bat' instead of 'sh'
                bat 'echo "Deploy step executed"'
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline executed successfully!"
        }
        failure {
            echo "❌ Pipeline failed. Check logs."
        }
    }
}
